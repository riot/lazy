{
  "name": "@riotjs/lazy",
  "version": "9.0.0",
  "description": "Lazy components loader for Riot.js",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    "import": "./index.js",
    "require": "./index.cjs"
  },
  "files": [
    "index.cjs",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint index.next.js test/**/*.js rollup.config.js",
    "build": "rollup -c",
    "cov": "c8 report --reporter=lcov",
    "cov-html": "c8 report --reporter=html",
    "test": "npm run lint && c8 mocha -r test/setup.js -r jsdom-global/register test/index.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "author": "Gianluca Guarini <gianluca.guarini@gmail.com> (https://gianlucaguarini.com)",
  "license": "MIT",
  "devDependencies": {
    "@riotjs/compiler": "10.0.0-beta.2",
    "@riotjs/prettier-config": "^1.1.0",
    "@riotjs/register": "10.0.0-beta.2",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "eslint": "^9.33.0",
    "eslint-config-riot": "^5.0.2",
    "jsdom": "26.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "riot": "10.0.0-rc.1",
    "rollup": "^4.46.2"
  },
  "peerDependencies": {
    "riot": "^6.0.0 || ^7.0.0 || ^9.0.0 || ^10.0.0"
  },
  "dependencies": {
    "@riotjs/util": "^10.0.0"
  }
}
